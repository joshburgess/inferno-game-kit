{
  "name": "inferno-game-kit",
  "version": "0.0.1",
  "description": "Make games with inferno",
  "main": "lib",
  "files": [
    "native.js",
    "lib",
    "umd"
  ],
  "scripts": {
    "start": "webpack-dev-server --hot --inline --port 3000 --config webpack.config.dev.js --content-base demo/",
    "build": "babel src -d lib --copy-files",
    "clean": "rimraf dist",
    "clean-umd": "rimraf umd",
    "copy-assets": "cp -a demo/assets/. dist/assets",
    "copy-html-css": "cp -a demo/index.html dist/index.html && cp -a demo/index.css dist/index.css",
    "dist": "npm run clean && webpack -p && npm run copy-assets && npm run copy-html-css",
    "lint": "eslint src demo --fix",
    "umd": "npm run clean-umd && webpack --config webpack.config.umd.js"
  },
  "author": "Ken Wheeler",
  "license": "MIT",
  "repository": "https://github.com/FormidableLabs/react-game-kit",
  "dependencies": {
    "inferno": "^1.0.0-beta1",
    "inferno-compat": "^1.0.0-beta1",
    "matter-js": "^0.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-inferno": "^1.0.0-beta1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-loose": "^8.0.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.0",
    "eslint-config-formidable": "^2.0.1",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.3.0",
    "html5-gamepad": "^0.1.4",
    "json-loader": "^0.5.4",
    "mobx": "^2.5.2",
    "mobx-react": "^3.5.5",
    "postcss-loader": "^0.13.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.16.1"
  }
}
